{% extends '::layoutTms.html.twig' %}

{% block body %}

 <a href="#modal" role="button" class="btn btn-small" data-toggle="modal">New Runner</a>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
            <th>Code</th>
    </tr>
  </thead>
  <tbody>
  {% for runner in runner_list %}  
  <tr>
    <td> <a href="{{path('tms_runner_edit', {'id':runner.id} )}}"> {{ runner.lastName}} {{ runner.firstName}} </a>   </td>
    <td>  {{ runner.code}}   </td>
  </tr>
  {% endfor %}
  </tbody>
</table> 






<div id="modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel"> New Runner </h3>
  </div>
  <div class="modal-body">
  <form id="modalForm" method="post" {{ form_enctype(form) }}>
    {{ form_widget(form) }}
    <input id="newClientModalSubmit" type="submit" value="Enregistrer" class="btn btn-primary" />
  </form>

  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Fermer</button>

  </div>
</div>

{% endblock %}



